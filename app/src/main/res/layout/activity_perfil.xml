<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F5F5F5">

    <!-- Header -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#16A085"
        android:padding="12dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸ‘¤ Mi Perfil"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_centerVertical="true"/>

        <Button
            android:id="@+id/btnVolver"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/volver"
            android:layout_alignParentEnd="true"
            android:backgroundTint="#E74C3C"
            style="?android:attr/buttonBarButtonStyle"/>
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <!-- Foto de Perfil (placeholder) -->
            <ImageView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@mipmap/ic_launcher"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="24dp"/>

            <!-- Nombre (No editable) -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nombre:"
                android:textStyle="bold"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/tvNombrePerfil"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Usuario"
                android:textSize="18sp"
                android:padding="12dp"
                android:background="#FFFFFF"
                android:layout_marginBottom="16dp"/>

            <!-- Email (No editable) -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email:"
                android:textStyle="bold"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/tvEmailPerfil"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="usuario@email.com"
                android:textSize="16sp"
                android:padding="12dp"
                android:background="#FFFFFF"
                android:layout_marginBottom="24dp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#E0E0E0"
                android:layout_marginBottom="24dp"/>

            <!-- Datos Editables -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ“Š Datos de Salud"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#2C3E50"
                android:layout_marginBottom="16dp"/>

            <!-- Peso -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Peso (kg):"
                android:textStyle="bold"
                android:textSize="14sp"/>

            <EditText
                android:id="@+id/etPeso"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Peso en kilogramos"
                android:inputType="numberDecimal"
                android:padding="16dp"
                android:background="@android:drawable/edit_text"
                android:layout_marginBottom="16dp"/>

            <!-- Edad -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Edad (aÃ±os):"
                android:textStyle="bold"
                android:textSize="14sp"/>

            <EditText
                android:id="@+id/etEdad"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Edad en aÃ±os"
                android:inputType="number"
                android:padding="16dp"
                android:background="@android:drawable/edit_text"
                android:layout_marginBottom="16dp"/>

            <!-- Altura -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Altura (cm):"
                android:textStyle="bold"
                android:textSize="14sp"/>

            <EditText
                android:id="@+id/etAltura"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Altura en centÃ­metros"
                android:inputType="numberDecimal"
                android:padding="16dp"
                android:background="@android:drawable/edit_text"
                android:layout_marginBottom="16dp"/>

            <!-- Sexo -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sexo (M/F):"
                android:textStyle="bold"
                android:textSize="14sp"/>

            <EditText
                android:id="@+id/etSexo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="M o F"
                android:inputType="text"
                android:maxLength="1"
                android:padding="16dp"
                android:background="@android:drawable/edit_text"
                android:layout_marginBottom="24dp"/>

            <!-- BotÃ³n Guardar -->
            <Button
                android:id="@+id/btnGuardarPerfil"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="@string/guardar"
                android:textSize="16sp"
                android:textStyle="bold"
                android:backgroundTint="#16A085"
                android:textColor="#FFFFFF"/>

        </LinearLayout>
    </ScrollView>

</LinearLayout>