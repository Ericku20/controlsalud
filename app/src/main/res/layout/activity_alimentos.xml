<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F5F5F5">

    <!-- Header -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#27AE60"
        android:padding="12dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/alimentos_title"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_centerVertical="true"/>

        <Button
            android:id="@+id/btnVolver"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/volver"
            android:layout_alignParentEnd="true"
            android:backgroundTint="#E74C3C"
            style="?android:attr/buttonBarButtonStyle"/>
    </RelativeLayout>

    <!-- Formulario -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- ID (solo lectura) -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/alimento_id"
                android:textStyle="bold"
                android:textSize="14sp"/>

            <EditText
                android:id="@+id/etId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:enabled="false"
                android:hint="Auto"
                android:inputType="number"
                android:layout_marginBottom="12dp"/>

            <!-- Nombre -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/alimento_nombre"
                android:textStyle="bold"
                android:textSize="14sp"/>

            <EditText
                android:id="@+id/etNombre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/alimento_nombre"
                android:inputType="text"
                android:layout_marginBottom="12dp"/>

            <!-- Descripción -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/alimento_descripcion"
                android:textStyle="bold"
                android:textSize="14sp"/>

            <EditText
                android:id="@+id/etDescripcion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/alimento_descripcion"
                android:inputType="text"
                android:layout_marginBottom="12dp"/>

            <!-- Calorías por 100g -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/alimento_calorias"
                android:textStyle="bold"
                android:textSize="14sp"/>

            <EditText
                android:id="@+id/etCalorias"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/alimento_calorias"
                android:inputType="numberDecimal"
                android:layout_marginBottom="12dp"/>

            <!-- Categoría -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/alimento_categoria"
                android:textStyle="bold"
                android:textSize="14sp"/>

            <EditText
                android:id="@+id/etCategoria"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/alimento_categoria"
                android:inputType="text"
                android:layout_marginBottom="16dp"/>

            <!-- Botones de acción -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginBottom="16dp">

                <Button
                    android:id="@+id/btnAgregar"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/agregar"
                    android:backgroundTint="#27AE60"
                    android:layout_marginEnd="4dp"/>

                <Button
                    android:id="@+id/btnEditar"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/editar"
                    android:backgroundTint="#F39C12"
                    android:enabled="false"
                    android:layout_marginStart="4dp"
                    android:layout_marginEnd="4dp"/>

                <Button
                    android:id="@+id/btnEliminar"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/eliminar"
                    android:backgroundTint="#E74C3C"
                    android:enabled="false"
                    android:layout_marginStart="4dp"/>
            </LinearLayout>

            <Button
                android:id="@+id/btnLimpiar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/limpiar"
                android:backgroundTint="#95A5A6"
                android:layout_marginBottom="16dp"/>

            <!-- Búsqueda -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="16dp">

                <EditText
                    android:id="@+id/etBuscar"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="@string/buscar_hint"
                    android:inputType="text"
                    android:layout_marginEnd="8dp"/>

                <Button
                    android:id="@+id/btnBuscar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/buscar"
                    android:backgroundTint="#27AE60"/>
            </LinearLayout>

            <!-- ListView -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lista de Alimentos"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_marginBottom="8dp"/>

            <ListView
                android:id="@+id/lvAlimentos"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:divider="#E0E0E0"
                android:dividerHeight="1dp"
                android:background="#FFFFFF"/>

        </LinearLayout>
    </ScrollView>

</LinearLayout>